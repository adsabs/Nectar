{
  "name": "monorepo-nectar",
  "version": "1.0.0",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "14.15.5",
    "yarn": "1.22.10"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "NODE_ENV=production dotenv -- lerna run start --stream --scope=@nectar/server",
    "build": "NODE_ENV=production dotenv -- lerna run build --stream",
    "build:dev": "dotenv -- lerna run build --stream --include-dependencies --scope '@nectar/{api,context,components}'",
    "serve": "dotenv -- lerna run dev --stream --no-bail --scope '@nectar/server'",
    "dev": "dotenv -- yarn build:dev && lerna run start --parallel --no-bail --scope '@nectar/api' --scope '@nectar/context' --scope '@nectar/components'",
    "styles": "lerna run styles --stream",
    "clean": "lerna run clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "concurrently": "^6.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "dotenv-cli": "^4.0.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@types/ramda": "^0.27.38",
    "ramda": "^0.27.1"
  }
}
