{
  "name": "@nectar/components",
  "version": "0.0.1-alpha.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "private": "true",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --format esm --tsconfig ./tsconfig.build.json --noClean --verbose",
    "build": "tsdx build --tsconfig ./tsconfig.build.json",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -s ../frontend/public -p 6006",
    "build-storybook": "build-storybook -s ../frontend/public",
    "create-component": "./scripts/react/create-component",
    "styles": "npx tailwindcss-cli@latest build -o styles/index.css -c ../frontend/tailwind.config.js",
    "clean": "rm -rf dist"
  },
  "module": "dist/components.esm.js",
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "volta": {
    "node": "14.15.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@nectar/context": "^0.1.0",
    "@popperjs/core": "^2.9.0",
    "@testing-library/react": "^11.2.5",
    "@types/react-outside-click-handler": "^1.3.0",
    "@xstate/react": "^1.3.1",
    "clsx": "^1.1.1",
    "next": "^10.0.7",
    "react-outside-click-handler": "^1.3.0",
    "react-popper": "^2.2.4",
    "xstate": "^4.16.2"
  }
}
