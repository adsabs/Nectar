// @nectar/frontend
{
  "include": ["src", "cypress/integration/**/*.ts"],
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": ["cypress"],
    "baseUrl": ".",
    "paths": {
      "@nectar/*": ["packages/*/src"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
