{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --verbose",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "clean": "rm -rf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@nectar/context",
  "author": "Tim Hostetler",
  "module": "dist/context.esm.js",
  "size-limit": [
    {
      "path": "dist/context.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/context.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@nectar/api": "^0.0.1-alpha.0",
    "@xstate/react": "^1.3.1",
    "constate": "^3.2.0",
    "xstate": "^4.16.2"
  }
}
